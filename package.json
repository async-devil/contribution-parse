{
  "name": "contribution-tree",
  "version": "1.0.0",
  "description": "Git conributions parse",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint",
    "start-code": "nodemon src/index.ts",
    "start-scss": "sass --watch src/public/scss:src/public/css",
    "test": "jest",
    "docs": "npx jsdoc -r ./api -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/async-devil/contribution-tree.git"
  },
  "keywords": [
    "Git",
    "Parsing",
    "Visualization"
  ],
  "author": "async-devil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/async-devil/contribution-tree/issues"
  },
  "homepage": "https://github.com/async-devil/contribution-tree#readme",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/source-map-support": "^0.5.3",
    "babel-jest": "^26.6.3",
    "better-docs": "^2.3.2",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "nodemon": "^2.0.4",
    "prettier": "2.1.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.0-dev.20210115"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "hbs": "^4.1.1",
    "request": "^2.88.2"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "/node_modules",
      "*.js",
      "/.vscode",
      "/config",
      "*.json"
    ],
    "ext": "ts,hbs,scss"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "tabWidth": 2,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "babel",
      "import",
      "plugin:prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "/.git",
      "/.vscode",
      "tsconfig.json",
      "node_modules",
      "/src/**/.js"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": "error"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        },
        "@babel/preset-typescript"
      ]
    ]
  }
}
